{
  "name": "typescript-node-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "types": "dist/index",
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.2",
    "concurrently": "^3.5.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.0",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run tsc-watch\" \"npm run nodemon\"",
    "nodemon": "nodemon \"./dist/index.js\"  --watch \"./dist\"",
    "tsc-build": "tsc",
    "tsc-watch": "tsc --watch",
    "test": "jest --coverage",
    "test-watch": "jest --coverage --watchAll",
    "webpack-build": "webpack --config webpack.config.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "mapCoverage": true
  },
  "keywords": [],
  "author": "Tristan Teufel",
  "license": "MIT"
}
